# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# shellcheck disable=SC2034
# Maintainer: liupold <rohhnch@protonmail.ch>

pkgname=pidswallow
pkgver=1.0
pkgrel=1
pkgdesc="A script to swallow your terminal automatically"
arch=(x86_64)
url="https://github.com/Liupold/pidswallow"
license=('APACHE')
depends=(xdotool)
makedepends=(git)
checkdepends=(shellcheck)
provides=(pidswallow)

source=("$pkgname-$pkgver::https://github.com/Liupold/pidswallow/archive/$pkgver.tar.gz")
sha256sums=("1ad08b49c9a9502bff47fd58df8b5a06252f7d349a8cdf4105932a77232adb69")


check() {
        shellcheck "$pkgname-$pkgver/pidswallow"
}

package() {
	cp "$pkgname-$pkgver/pidswallow" "$HOME"
}
